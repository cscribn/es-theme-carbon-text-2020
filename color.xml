		</text>

		<textlist name="gamelist">
			<selectedColor>8b0000</selectedColor>
		</textlist>

	</view>

	<view name="basic, detailed, video">

		<image name="top" extra="true">
			<color>8b0000</color>
		</image>

		<text name="systemText" extra="true">
