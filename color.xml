	</view>

	<view name="basic">

		<textlist name="gamelist">
			<selectedColor>8b0000</selectedColor>
		</textlist>

	</view>

	<view name="detailed, video">

		<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher">
